generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  fullName       String
  phone          String          @unique
  roomNumber     String
  email          String
  password       String
  birthDate      DateTime
  status         String          @default("Pending")
  categoryId     String?
  createdAt      DateTime        @default(now())
  resetToken     String?
  resetTokenExpiry DateTime?
  participations Participation[]
  category       Category?       @relation(fields: [categoryId], references: [id])
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Category {
  id            String         @id @default(uuid())
  name          String
  announcements Announcement[]
  users         User[]
}

model Announcement {
  id               String          @id @default(uuid())
  title            String
  description      String
  imageUrl         String?
  type             String
  targetCategoryId String?
  eventDate        DateTime?
  locationName     String?
  latitude         Float?
  longitude        Float?
  mapImageUrl      String?
  maxParticipants  Int?            // New: Quota limit
  participationDeadline DateTime?  // New: Time limit
  isClosed         Boolean         @default(false)
  isPublished      Boolean         @default(false)
  createdAt        DateTime        @default(now())
  targetCategory   Category?       @relation(fields: [targetCategoryId], references: [id])
  participations   Participation[]
}

model Participation {
  id             String       @id @default(uuid())
  announcementId String
  userId         String
  plusCount      Int          @default(0)
  totalComing    Int
  createdAt      DateTime     @default(now())
  user           User         @relation(fields: [userId], references: [id])
  announcement   Announcement @relation(fields: [announcementId], references: [id])
}

model DeviceToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String?         // Optional: link to a logged-in user
  createdAt DateTime @default(now())
}

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}
